# Maintainer:	Shanto <shanto@hotmail.com>
# Author:		Shanto <shanto@hotmail.com>

pkgname=abf
pkgver=20111114
pkgrel=1
pkgdesc="AUR/ABS build factory for Arch Linux"
arch=('any')
url="http:////github.com/Shanto/ABF"
license=('GPL')
groups=('system')
depends=('schroot' 'yaourt' 'btrfs-progs-unstable')
makedepends=('git')
#provides=()
#conflicts=()
#replaces=()
backup=('etc/abf/afb.conf')
#options=()
install=$pkgname.install
#source=()
#noextract=()
#md5sums=()

_gitroot=git://github.com/Shanto/ABF.git
_gitname=abf

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [[ -d "$_gitname" ]]; then
		cd "$_gitname" && git pull origin
		msg "The local files are updated."
	else
		git clone "$_gitroot" "$_gitname"
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting build..."

	rm -rf "$srcdir/$_gitname-build"
	git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
	cd "$srcdir/$_gitname-build"
}

package() {
	cd "$srcdir/$_gitname-build"
	cp -r {etc,var} "$pkgdir/"
	install -d "$pkgdir/usr/bin/"
	install -m0755 abf "$pkgdir/usr/bin/"
}
